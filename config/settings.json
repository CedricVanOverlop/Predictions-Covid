{
  "communes": [
    "Anderlecht",
    "Auderghem", 
    "Berchem-Sainte-Agathe",
    "Bruxelles",                       
    "Etterbeek",
    "Evere", 
    "Forest (Bruxelles-Capitale)",
    "Ganshoren",
    "Ixelles",
    "Jette",
    "Koekelberg",
    "Molenbeek-Saint-Jean",
    "Saint-Gilles",
    "Saint-Josse-ten-Noode", 
    "Schaerbeek",
    "Uccle",
    "Watermael-Boitsfort",
    "Woluwe-Saint-Lambert",
    "Woluwe-Saint-Pierre"
  ],

  
  "smoothing": {
    "method": "savitzky_golay",
    "window_size": 7,
    "polynomial_order": 3,
    "coefficients": [-2, 3, 6, 7, 6, 3, -2],
    "divisor": 21
  },
  
  "geography": {
    "epsilon": 0.1,
    "weight_formula": "1/(frontier_length + epsilon)",
    "algorithm": "dijkstra"
  },
  
  "markov": {
    "alpha_test_values": [0.1, 0.3, 0.5, 1.0, 2.0, 5.0],
    "default_alpha": 0.5,
    "prediction_horizon_days": 14,
    "validation_split": 0.8
  },
  
  "cache": {
    "max_age_hours": 24,
    "auto_refresh": true,
    "data_directory": "data"
  },
  
  "data_sources": {
    "sciensano_file": "COVID19BE_CASES_MUNI.json",
    "date_format": "YYYY-MM-DD",
    "period": {
      "start_date": "2021-01-01", 
      "end_date": "2022-12-31"
    }
  }
}